@model AgeCalculator.Models.DatumRodjenja
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css"
          rel="stylesheet">
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
    <script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    <title>Age Calculator</title>
    <style>
        button{
            padding: 4.5px 20px 4.5px 20px;
            background-color: lightskyblue;
            border-radius: 10em;
            border-color: darkgray;
        }
    </style>
</head>
<body>
    <br />
    @using (Html.BeginForm())
    {
        <div>
            <p>Unesite svoj datum rodjenja:</p>
            @Html.EditorFor(x => x.Datum)
        </div>
        <br />
        <button type="submit">Izracunaj</button>
    }
    <br />
    <div class="container">
        <p class="row">@ViewBag.Error</p>
        <p class="row">@ViewBag.Uvod</p>
        <p class="row">@ViewBag.StarostMj</p>
        <p class="row">@ViewBag.StarostDan</p>
        <p class="row">@ViewBag.StarostSat</p>
        <p class="row">@ViewBag.StarostMin</p>
        <p class="row">@ViewBag.StarostSek</p>
    </div>
</body>
</html>