@{
    Layout = null;
}
<head>
    <style>
        body {
            text-align: center;
            background-color: antiquewhite;
            background: linear-gradient(
            antiquewhite, white);
            padding-top: 10em;
            font-family: Candara;
        }

        .my-header {
            position: absolute;
            top: 0;
            margin-left: 25%;
            width: 50%;
            text-align: center;
            padding-top: 15px;
            padding-bottom: 15px;
            border-radius: 2px 2px 10px 10px;
            background-color: black;
            opacity: 0.5;
        }

        .my-footer{
            position: absolute;
            bottom: 0;
            margin-left: 25%;
            width: 50%;
            text-align: center;
            padding-top: 5px;
            padding-bottom: 5px;
            border-radius: 10px 10px 2px 2px;
            background-color: black;
            opacity: 0.5;
        }

        .my-footer p{
            color: white;
            opacity: 1;
        }

        a {
            color: white;
            opacity: 1;
            margin-left: 15px;
            margin-right: 15px;
            text-decoration: none;
        }

        a:active{
            color: darkgray;
        }
    </style>
</head>
<body>
    <div class="my-header">
        @Html.ActionLink("MVC", "Index")    
        @Html.ActionLink("Jquery", "DatePicker")   
        @Html.ActionLink("Ajax", "Ajax")
    </div>
    <div>
        @RenderBody()
    </div>
    <div class="my-footer">
        <p>@DateTime.Today.Year - Toni Dedić - Probna aplikacija za 3 vrste dobavljanja podataka</p>
    </div>
</body>